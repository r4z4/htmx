{{
#>
 main-layout }}
 <div class="list_api" id="list_api">
    <h1>Lists</h1>
    <p>{{{title}}}</p>
    <div class="btn_div">
        <button
            _="on hover toggle .metal_purple on me"
            hx-get="/consult/list" 
            hx-target="#list_op_container" 
        >
            Consults
        </button>
        <button
            _="on hover toggle .metal_purple on me"
            hx-get="/location/list" 
            hx-target="#list_op_container" 
        >
            Locations
        </button>
        <button
            _="on hover toggle .metal_purple on me"
            hx-get="/consultant/list" 
            hx-target="#list_op_container" 
        >
            Consultants
        </button>
        <button
            _="on hover toggle .red on me"
            hx-get="/client/list" 
            hx-target="#list_op_container" 
        >
            Clients
        </button>
        <button
            _="on hover toggle .metal_purple on me"
            hx-get="/fixed" 
            hx-target="#list_op_container" 
        >
            Fixed Table
        </button>
    </div>

    <div id="list_response">
    </div>

    <div class="op_container" id="list_op_container">
        <p hx-get={{get_list_view user.list_view}} hx-trigger="load" hx-swap="innerHTML" hx-target="#list_op_container">Default View</p>
    </div>
</div>
{{/main-layout}}