{{
#>
 main-layout user=user}}
 <div class="user_home">
    <h1>Homepage for {{data.username}}</h1>
    <div class="modal-container" id="edit_form_modal"></div>
    <div class="img_div">
        <img src={{data.avatar_path}} alt="user_avatar"/>
    </div>
    <div class="btn_div">
        {{!-- <button
            hx-get="/user/settings" 
            hx-target="#user_op_container" 
        >
            Edit Settings
        </button> --}}

        {{!-- <button onclick="window.dialog.show();">Edit Settings</button>

        <dialog id="dialog">
            {{> user/user-settings}}
        <button onclick="window.dialog.close();">Cancel</button>
        </dialog> --}}

        <button
            {{!-- hx-get={{form_rte this.slug @root.entity_type_id}} --}}
            hx-get="/user/settings"
            hx-target="#edit_form_modal"
        > Settings
        </button>
        <button
            hx-get="/user/compose"
            hx-target="#user_op_container"
        > Compose
        </button>
        {{!-- <button
            hx-get="/user/profile" 
            hx-target="#user_op_container" 
        >
            Edit Profile
        </button> --}}
    </div>

    <div id="user_op_response">
        {{#if err}}
            {{err}}
        {{/if}}
    </div>

    <div class="op_container" id="user_op_container">
        <div class="info_section">
            <p>Username: {{data.username}}</p>
            <p>Email: {{data.email}}</p>
            <p>User Since: {{data.created_at_fmt}}</p>
            <p>Last Updated: {{data.updated_at_fmt}}</p>
        </div>
    </div>
</div>
{{/main-layout}}