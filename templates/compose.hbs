<div class="compose_container">  
  <form id="contact" action="" method="post">
    <h3>Compose an Article</h3>
    <fieldset>
      <input placeholder="Article Title" type="text" tabindex="1" required autofocus>
    </fieldset>
    <fieldset>
      <input placeholder="Subtitle" type="text" tabindex="1" required autofocus>
    </fieldset>
    <fieldset>
      <input placeholder="Category" type="text" tabindex="1" required autofocus>
    </fieldset>
    <fieldset>
      <textarea placeholder="Article content here ..." tabindex="5" required></textarea>
    </fieldset>
    <fieldset>
      <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
    </fieldset>
  </form>
</div>