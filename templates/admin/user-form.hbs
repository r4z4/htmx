{{
#>
 modal-layout }}
<div>
  <h2 class="text-center">Edit User</h2>
  <form 
    class="form-style"
    hx-boost="true"
    action="/location/form" 
    method="post"
    hx-target="#location_errors"
    {{!-- hx-headers='{"Content-Type": "multipart/form-data"}' --}}
    hx-swap="innerHTML"
  >
    <ul>
      <div id="location_errors"></div>
      <li>
          <input type="text" name="username" class="field-style field-split align-left" placeholder="Username" value={{username}} />
          <input type="email" name="email" class="field-style field-split align-right" placeholder="Email" value={{email}} />
      </li>


      <li>
        <input type="text" name="avatar_path" class="field-style field-split align-left" placeholder="Avatar Path" value={{avatar_path}}  />
        <select class="field-style field-split align-right" id="location_contact_id" name="location_contact_id" value="{{user_type_id}}" _="on select toggle @disabled on #address_two">
            {{#each user_type_options}}
              {{#if (int_eq this.value @root.user_type_id)}}
                <option value="{{this.value}}" selected="true">{{this.key}}</option>
              {{else}} 
                <option value="{{this.value}}">{{this.key}}</option>
              {{/if}}
            {{/each}}
        </select>
      </li>
      <li>
        <div>
          <button class="field-style field-split align-left" type="submit">Send Response</button>
          <button id="reset_btn" class="field-style field-split align-right" type="reset">Clear Form</button>
        </div>
    </li>
  </form>
</div>
{{/modal-layout}}